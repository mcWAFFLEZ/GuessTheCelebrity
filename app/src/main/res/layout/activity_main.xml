<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/celebrityImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/myGridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/myGridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#6D000000"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celebrityImageView"
        app:rowCount="4">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#CCFF90"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:onClick="celebrityPick"
            android:padding="10dp"
            android:tag="0"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#CCFF90"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:onClick="celebrityPick"
            android:padding="10dp"
            android:tag="1"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#CCFF90"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:onClick="celebrityPick"
            android:padding="10dp"
            android:tag="2"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#CCFF90"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:onClick="celebrityPick"
            android:padding="10dp"
            android:tag="3"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_columnWeight="1"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>